generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Widget {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
}

model TradingPair {
  id    Int      @id @default(sequence(maxValue: 2147483647))
  date  DateTime
  open  Float
  high  Float
  low   Float
  close Float
}

model Market {
  id     Int    @id @default(sequence())
  name   String
  price  Float
  change Float
}

model OrderBook {
  id          Int      @id @default(sequence(maxValue: 2147483647))
  symbol      String
  bidPrice    Float
  askPrice    Float
  bidQuantity Float
  askQuantity Float
  userId      Int
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}

model Deposit {
  id        Int      @id @default(sequence(maxValue: 2147483647))
  userId    Int
  walletId  Int
  amount    Float
  currency  String   @default("ETH")
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  wallet    Wallet   @relation(fields: [walletId], references: [id])
}

model Wallet {
  id        Int       @id @default(sequence())
  currency  String    @default("ETH")
  balance   Float     @default(0.0)
  userId    Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  address   String
  deposits  Deposit[]
  user      User      @relation(fields: [userId], references: [id])
}

model User {
  id        Int         @id @default(sequence())
  username  String      @unique
  email     String      @unique
  password  String
  createdAt DateTime    @default(now())
  deposits  Deposit[]
  OrderBook OrderBook[]
  Wallets   Wallet[]

  @@index([email])
}
